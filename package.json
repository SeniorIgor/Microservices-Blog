{
  "name": "@org/blog",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "24.11.1",
    "npm": "11.6.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all",
    "build:affected": "nx affected --target=build",
    "start:all": "nx run-many --target=start --all --parallel --maxParallel=10 --exclude=shared",
    "dev:all": "nx run-many --target=dev --all --parallel --maxParallel=10 --exclude=shared",
    "lint": "nx run-many --target=lint --all",
    "lint:affected": "nx affected --target=lint",
    "lint:fix": "nx run-many --target=lint --all -- --fix",
    "lint:fix:affected": "nx affected --target=lint -- --fix",
    "type-check": "nx run-many --target=type-check --all",
    "type-check:affected": "nx affected --target=type-check",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up",
    "docker:build:base": "docker compose build base",
    "docker:build:query": "npm run docker:build:base && docker compose build query",
    "docker:up:query": "docker compose up query",
    "docker:build:posts": "npm run docker:build:base && docker compose build posts",
    "docker:up:posts": "docker compose up posts",
    "docker:build:moderation": "npm run docker:build:base && docker compose build moderation",
    "docker:up:moderation": "docker compose up moderation",
    "docker:build:event-bus": "npm run docker:build:base && docker compose build event-bus",
    "docker:up:event-bus": "docker compose up event-bus",
    "docker:build:comments": "npm run docker:build:base && docker compose build comments",
    "docker:up:comments": "docker compose up comments",
    "docker:build:client": "npm run docker:build:base && docker compose build client",
    "docker:up:client": "docker compose up client",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@nx/js": "^22.1.2",
    "@nx/node": "^22.1.2",
    "@nx/react": "^22.1.2",
    "@nx/vite": "^22.1.2",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "nx": "22.1.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.1",
    "typescript": "^4.9.5",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
