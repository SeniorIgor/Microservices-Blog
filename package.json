{
  "name": "blog",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "24.11.1",
    "npm": "11.6.2"
  },
  "workspaces": [
    "client",
    "posts",
    "comments",
    "event-bus",
    "moderation",
    "query",
    "shared"
  ],
  "scripts": {
    "lint": "eslint \"client/src/**/*.{js,jsx,ts,tsx}\" \"posts/src/**/*.ts\" \"comments/src/**/*.ts\" \"query/src/**/*.ts\" \"moderation/src/**/*.ts\" \"shared/src/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "fix:cache": "npm run lint -- --fix --cache",
    "build:posts": "tsc -p posts/tsconfig.json",
    "build:comments": "tsc -p comments/tsconfig.json",
    "prepare": "husky install",
    "type-check": "npm run type-check:posts && npm run type-check:comments && npm run type-check:query && npm run type-check:client && npm run type-check:moderation && npm run type-check:shared",
    "type-check:posts": "tsc -p posts/tsconfig.json --noEmit",
    "type-check:query": "tsc -p query/tsconfig.json --noEmit",
    "type-check:comments": "tsc -p comments/tsconfig.json --noEmit",
    "type-check:moderation": "tsc -p moderation/tsconfig.json --noEmit",
    "type-check:shared": "tsc -p shared/tsconfig.json --noEmit",
    "type-check:client": "tsc -p client/tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "4.9.5"
  }
}
